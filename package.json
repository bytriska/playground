{
  "name": "playground",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.27.0",
  "description": "The playground where i test anything",
  "author": "Triska Mahfud K (https://github.com/bytriska)",
  "license": "MIT",
  "funding": "https://github.com/sponsors/bytriska",
  "homepage": "https://github.com/bytriska/playground#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytriska/playground.git"
  },
  "bugs": "https://github.com/bytriska/playground/issues",
  "keywords": [],
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "dev": "pnpm -r --filter='./packages/*' run dev",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "simple-git-hooks",
    "config-resolver": "pnpm --filter='*config-resolver' run "
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "prettier": "3.3.3",
    "simple-git-hooks": "^2.13.1",
    "typescript": "<5.9.0",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,json,yaml,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
